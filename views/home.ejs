<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Agendamento de exames</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <div class="container mt-2 px-5">
            
        <nav class="nav align-items-center justify-content-between bg-dark">
            <div class="nav-item align-self-center dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Botão dropdown
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Alguma ação</a>
                    <a class="dropdown-item" href="#">Outra ação</a>
                    <a class="dropdown-item" href="#">Alguma coisa aqui</a>
                </div>
            </div>
            <div class="nav-item align-self-center text-white" id="ag">Agendamento de Exames: ${Tomografia}</div>
            <div class="nav-item align-self-center">              
                <img src="/img/logo2.png" alt="Logo do hospital unimed de lins">
            </div>
        </nav>

        
        <table class="table" id="tabelaDinamica">
            <tr id="linhaDiasSemana">
                <!-- Os dias da semana serão adicionados aqui dinamicamente -->
            </tr>
        </table>
        
        
        <div class="row mt-3 align-items-center ">
            <div class="col">
                <p class="mb-0 align-self-center linha1">Lista de Exames</p>
            </div>
            <div class="col d-flex align-items-end">
                <p class="mb-0 me-2 align-self-center linha2">Procurar:</p>
                <input type="text" class="form-control align-self-center" placeholder="Digite aqui...">
            </div>
        </div>
        
        <table class="table table-striped mt-5 text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome do Paciente</th>
                    <th scope="col">Data da Abertura</th>
                    <th scope="col">Convênio</th>
                    <th scope="col">Tipo de Exame</th>
                    <th scope="col">Data do Exame</th>
                    <th scope="col">Status</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% consultas.forEach(consulta => { %>
                    <tr>
                        <td><%= consulta.id %></td>
                        <td><%= consulta.nomePaciente %></td>
                        <td><%= consulta.dataAbertura %></td>
                        <td><%= consulta.convenio %></td>
                        <td><%= consulta.tipoExame %></td>
                        <td><%= consulta.dataExame %></td>
                        <td><%= consulta.status %></td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm icones" data-bs-toggle="modal" data-bs-target="#visualizarModal">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button type="button" class="btn btn-warning btn-sm icones" onclick="abrirModalEdicao('<%= JSON.stringify(consulta) %>')">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm icones" data-bs-toggle="modal" data-bs-target="#confirmarExclusaoModal" onclick="prepararExclusao('<%= consulta.id %>')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            
            <div class="row mt-3">
                <div class="col text-end">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#novoCadastro">
                        <i class="bi bi-plus"></i>Adicionar Novo Cadastro
                    </button>
                </div>
            </div>
            <div class="modal fade" id="novoCadastro" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Novo Cadastro</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <!-- Formulário para novo cadastro -->
                            <form method="POST" id="formularioAdd">
                                <!-- Campos do formulário -->
                                <div class="mb-3">
                                    <label for="nomePaciente" class="form-label">Nome do Paciente</label>
                                    <input type="text" class="form-control" id="nomePaciente" name="nomePaciente" required>
                                </div>
                                <div class="mb-3">
                                    <label for="dataAbertura" class="form-label">Data da Abertura</label>
                                    <input type="text" class="form-control" id="dataAbertura" name="dataAbertura" required>
                                </div>
                                <div class="mb-3">
                                    <label for="convenio" class="form-label">Convênio</label>
                                    <input type="text" class="form-control" id="convenio" name="convenio" required>
                                </div>
                                <div class="mb-3">
                                    <label for="tipoExame" class="form-label">Tipo de Exame</label>
                                    <input type="text" class="form-control" id="tipoExame" name="tipoExame" required>
                                </div>
                                <div class="mb-3">
                                    <label for="dataExame" class="form-label">Data do Exame</label>
                                    <input type="text" class="form-control" id="dataExame" name="dataExame" required>
                                </div>
                                <div class="mb-3">
                                    <label for="numGuia" class="form-label">Número da Guia</label>
                                    <input type="text" class="form-control" id="numGuia" name="numGuia" required>
                                </div>
                                <div class="mb-3">
                                    <label for="status" class="form-label">Status</label>
                                    <input type="text" class="form-control" id="status" name="status" required>
                                </div>
                                
                                <!-- Botões do formulário -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                    <button type="submit" class="btn btn-primary" onclick="enviarFormularioAdd()">Salvar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>       
            <!-- Modal de atualização dos dados -->
            <div class="modal fade" id="editarModal" tabindex="-1" role="dialog" aria-labelledby="editarModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editarModalLabel">Editar Consulta</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" onclick="fecharModal('editarModal')" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <!-- Formulário de Edição -->
                            <form id="formularioEdicao" method="PUT">
                                <!-- Campos do formulário -->
                                <div class="mb-3">
                                    <label for="nomePaciente" class="form-label">Nome do Paciente:</label>
                                    <input type="text" class="form-control" id="nomePacienteEdit" name="nomePaciente" required>
                                </div>
                                <div class="mb-3">
                                    <label for="dataAbertura" class="form-label">Data da Abertura</label>
                                    <input type="text" class="form-control" id="dataAberturaEdit" name="dataAbertura" required>
                                </div>
                                <div class="mb-3">
                                    <label for="convenio" class="form-label">Convênio</label>
                                    <input type="text" class="form-control" id="convenioEdit" name="convenio" required>
                                </div>
                                <div class="mb-3">
                                    <label for="tipoExame" class="form-label">Tipo de Exame</label>
                                    <input type="text" class="form-control" id="tipoExameEdit" name="tipoExame" required>
                                </div>
                                <div class="mb-3">
                                    <label for="dataExame" class="form-label">Data do Exame</label>
                                    <input type="text" class="form-control" id="dataExameEdit" name="dataExame" required>
                                </div>
                                <div class="mb-3">
                                    <label for="numGuia" class="form-label">Número da Guia</label>
                                    <input type="text" class="form-control" id="numGuiaEdit" name="numGuia" required>
                                </div>
                                <div class="mb-3">
                                    <label for="status" class="form-label">Status</label>
                                    <input type="text" class="form-control" id="statusEdit" name="status" required>
                                </div>
                                <!-- Campo Oculto para Armazenar o ID da Consulta -->
                                <input type="hidden" id="idEdit" name="id">
                                <!-- Botão de Envio -->
                                <button type="button" class="btn btn-primary" onclick="enviarEdicao()">Salvar Alterações</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            

            <!-- Modal de Confirmação -->
            <div class="modal fade" id="confirmarExclusaoModal" tabindex="-1" role="dialog" aria-labelledby="confirmarExclusaoModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmarExclusaoModalLabel">Confirmar Exclusão</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Tem certeza que deseja excluir esta consulta?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="button" class="btn btn-danger" id="confirmarExclusaoBtn" onclick="confirmarExclusao()">Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>
        <script src="/js/exclusao.js"></script>
        <script src="/js/criacao.js"></script>
        <script src="/js/logica.js"></script>
        <script src="/js/tabelaDatas.js"></script>
       
    </body>
    </html>